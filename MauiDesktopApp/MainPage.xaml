<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="MauiDesktopApp.MainPage"
   Title="Maui desktop Sample">

   <!--ColumnDefinitions="auto,*" RowDefinitions="auto,*"-->

   <Grid 
      Margin="5">

      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="auto"/>
         <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
         <RowDefinition Height="auto" />
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <BoxView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="5"
              Color="LightGrey" CornerRadius="10" />

      <HorizontalStackLayout Margin="10">

         <Button Text="sample 1" Margin="5" CommandParameter="1" Clicked="Button_Clicked"/>

         <Button Text="sample 2" Margin="5" CommandParameter="2" Clicked="Button_Clicked"/>

         <Button Text="sample 3" Margin="5" CommandParameter="3" Clicked="Button_Clicked"/>

      </HorizontalStackLayout>


      <BoxView Grid.Column="0" Grid.Row="1" Margin="5"
              Color="LightGrey" CornerRadius="10" />

      <BoxView Grid.Column="1" Grid.Row="1" Margin="5"
              Color="LightGrey" CornerRadius="10" />





   </Grid>

</ContentPage>
